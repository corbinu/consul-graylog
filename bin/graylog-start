#!/bin/bash

# Consul Greylog Server start script.

set -e

if [ "$1" = 'greylog-server' ]
then

    if [ "$(id -u)" != "0" ]; then
        echo "This script must be run as root"
        exit 1
    fi

    /usr/local/bin/greylog-bootstrap &

    # Start Greylog
    /opt/graylog/embedded/share/docker/my_init
fi

exec "$@"
